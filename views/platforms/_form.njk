<form method="POST" action="{{action}}">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" class="form-control" id="name" value="{{platform.name}}">
  </div>
  <div class="form-group">
    <label for="summary">Summary</label>
    <textarea rows="8" name="summary" class="form-control" id="summary">{{platform.summary}}</textarea>
  </div>

  <div class="jumbotron bg-light">
    <h2>Logo</h2>
    <div class="form-group">
      <label for="name">URL</label>
      <input type="text" name="platform_logo_url" class="form-control" id="platform_logo_url" value="{{platform.platform_logo.url}}">
    </div>
    <div class="form-row">
      <div class="col input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">Width</span>
        </div>
        <input type="text" class="form-control" name="platform_logo_width" value="{{platform.platform_logo.width}}">
      </div>
      <div class="col input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">Height</span>
        </div>
        <input type="text" class="form-control" name="platform_logo_height" value="{{platform.platform_logo.height}}">
      </div>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">{{callToAction}}</button>
</form>
