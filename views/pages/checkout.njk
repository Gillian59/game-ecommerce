{% extends "layout/index.njk" %}

{% block css %}
    <link rel="stylesheet" href="/assets/styles/checkout.css">
{% endblock %}

{% include "layout/navbar.njk" %}

{% block title %}
    <title> GD: Checkout </title>
{% endblock %}

{% block content %}
    <div class="container widthForm mt-5">
        <h1 class="cart-title">Etapes de paiement </h1>
        <form class="widthForm " method="POST" action="{{action}}">
            <div class="form-group">
                <label for="prix">Prix Ã  payer :  </label>
                <span class="badge badge-primary badge-pill">30 Euros</span>                 
            </div>
            <div class="form-group">
                <label for="moyendepaiement">Moyens de paiement :  </label>
            </div>
            <div>
                <label for="visa">   CB Visa : </label> 
                <input type="checkbox" id="visa" name="visa" checked> 
