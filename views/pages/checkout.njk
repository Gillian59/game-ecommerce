                <input type="checkbox" id="paypal" name="paypal" > 
            </div>
            <div class="form-group">
                <label for="adresse">Adresse :  </label>
                <input type="text" class="form-control" id="adresse" placeholder="Grand place">
                <small id="adresse" class="form-text text-muted"></small>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Ville :  </label>
                <input type="text" class="form-control" id="ville" placeholder="Lille">
